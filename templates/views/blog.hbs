{{!< default}}
<div class="">
<div class="hero" style="background: url('https://images.pexels.com/photos/541538/pexels-photo-541538.jpeg?auto=compress&cs=tinysrgb&dpr=2&h=750&w=1260'); background-size: cover; background-position: center center">
    <div class="row">
        <div class="container title text-left" style="margin-top: 13rem; margin-bottom: 11rem">
        	<h1 class="text-light">UPCOMING EVENTS</h1>
        </div>
    </div>
	<hr style="border-bottom: 3px double lightcoral;">
</div>
<div class="container" id="blogContent">
	<div class="row">
		<div class="col-sm-8 col-md-9 px-3" id="">
			<div class="container">
				<h3 class="text-weight-normal">Showing {{ data.posts.results.length}} posts.</h3>
				<hr style="border-bottom: 4px lightcoral double"></hr>
				<br>
				{{# each data.posts.results}}
				<div data-ks-editable="{{#if ../user}}{{adminEditableUrl ../../user _id}}{{/if}}" class="post">
					<h2><a href="{{postUrl slug}}">{{{title}}}</a></h2>
					<p class="lead text-muted">{{{categoryList categories prefix="Posted in "}}}
							{{#if author.name.first}}by {{author.name.first}}{{/if}}
					</p>
					{{#if image}}<img src="{{{cloudinaryUrl image width=160 height=160 crop='fit' }}}" class="img pull-right">{{/if}}
					<p>{{{content.brief}}}</p>
					{{#if content.extended}}<p class="read-more"><a href="{{postUrl slug}}">Read more...</a></p>{{/if}}
					<hr style="border-bottom: 1px lightcoral double"></hr>
				</div>
				{{/each}}
			</div>
		</div>
		
		<div class="col-sm-4 col-md-3 text-center" style="" >
			<h2>CATEGORIES</h2>
			<div class="list-group text-center" style="font-size: 16px">
				
				<a href="/blog" id="active" style="">All Categories</a>
				<br style="border-bottom: solid 3px lightseagreen !important">
				{{# each data.categories }}
				<a href="{{categoryUrl key}}" class="false">{{name}}</a>
				{{/each}}
			</div>
			

			{{!-- <div class="btn-group btn-group-vertical btn-group-toggle" data-toggle="buttons" id="blogButtons">
