					<a href="/blog" class="">All Categories</a>
				</label>
				<br style="border-bottom: double lightcoral 3px;">
				{{# each data.categories }}
				<label class="btn">
					<input type="radio" name="options" id="option2" autocomplete="off">
					<a href="{{categoryUrl key}}" class="">{{name}}</a>
					</label>
				{{/each}}
			</div> --}}
		</div>
	</div>
	{{>pagination}}
</div>
</div>

